<div class="page-header">
  <h1>Directors</h1>
</div>

<p>
    <a href = "/directors/new_form" class="btn btn-primary">
        Add a new director
    </a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Image</th>
            <th>Dob</th>
            <th>Name</th>
            <th>Bio</th>
        </tr>
    </thead>
    
    <tbody>
        <% @our_directors.each do |director| %>
          <tr>
            <!--<td><img src="<%= director.image_url %>" width="80"></td>-->
            <td><%= director.image_url %></td>
            <td><%= director.dob %></td>
            <td><%= director.name %></td>
            <td><%= director.bio %></td>
            <td>
              <a href="/directors/<%= director.id %>" class="btn btn-primary">
                Show details
                <i class="fa fa-search-plus"></i>
              </a>
            </td>
            <td>
              <a href="/directors/<%= director.id %>/edit_form" class="btn btn-warning">
                Edit details
                <i class="fa fa-edit"></i>
              </a>
            </td>
            <td>
              <a href="/delete_director/<%= director.id %>" class="btn btn-danger">
                Delete director
                <i class="fa fa-trash-o"></i>
              </a>
            </td>
          </tr>
        <% end %>
  </tbody>
</table>



